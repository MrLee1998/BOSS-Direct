/* pages/find/find.wxss */

.page {
    width: 100%;
    background-color: #f5f5f5;
}

.nav {
    width: 100%;
    height: 230rpx;
    margin-bottom: 15rpx;
    background-color: #fff;
    box-sizing: border-box;
    display: flex;
    overflow: hidden;
}

.nav1 {
    display: flex;
    flex: 1;
    justify-content: center;
    align-items: center;
    font-size: 14px;
    text-align: center;
}

.nav1 .image {
    width: 90rpx;
    height: 80rpx;
}

.select {
    width: 100%;
    height: 345rpx;
    background-color: #fff;
    margin-bottom: 15rpx;
    display: flex;
    overflow: hidden;
    box-sizing: border-box;
}

.select .left {
    flex: 3;
    padding-left: 40rpx;
    overflow: hidden;
}

.select .left h3 {
    display: block;
    margin-bottom: 20rpx;
    margin-top: 70rpx;
}

.select .left .desc {
    color: #696969;
    opacity: 0.77;
    font-size: 13px;
    margin-bottom: 30rpx;
}

.select .left .btn {
    color: #fff;
    background-color: #34c4bd;
    width: 228rpx;
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 35rpx;
    padding-left: 30rpx;
}

.select .left .btn .arrow {
    display: inline-block;
    width: 16rpx;
    height: 16rpx;
    border-right: 2px solid #fff;
    border-bottom: 2px solid #fff;
    transform: translateX(20rpx) rotateZ(-45deg);
}

.select .right {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}

.select .right .img {
    width: 260rpx;
    height: 275rpx;
}